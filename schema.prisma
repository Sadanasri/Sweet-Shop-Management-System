generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  orders    Order[]
  createdAt DateTime @default(now())
}

model Sweet {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  price     Float
  quantity  Int
  imageUrl  String?
  items     OrderItem[]
  createdAt DateTime @default(now())
}

model Order {
  id        Int         @id @default(autoincrement())
  userId    Int
  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
  total     Float
  status    String      @default("COMPLETED")
  createdAt DateTime    @default(now())
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   Int
  order     Order    @relation(fields: [orderId], references: [id])
  sweetId   Int
  sweet     Sweet    @relation(fields: [sweetId], references: [id])
  quantity  Int
  price     Float
}
